@model Product
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-primary">Edit Product</h1>

<form method="post">
    <div class="border p-3 mt-4">

        <div class="mb-3 row">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" disabled/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-4 row">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" disabled></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-4 row">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" class="form-control" disabled />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        <div class="mb-4 row">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" disabled />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mb-4 row">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" class="form-control" disabled />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>

        <div class="mb-4 row">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" disabled />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-4 row">
            <label asp-for="Price50"></label>
            <input asp-for="Price50" class="form-control" disabled />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>

        <div class="mb-4 row">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" class="form-control" disabled />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-area="Admin" asp-controller="Product" asp-action="Index"
                   class="btn btn-outline-secondary border form-control">Back to List</a>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}