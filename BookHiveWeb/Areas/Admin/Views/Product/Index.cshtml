@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Product" asp-action="Upsert"><i class="bi bi-plus-circle"></i>&nbsp;&nbsp;Create Product</a>
        </div>
    </div>
    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
               <th>Title</th>
                <th>Category</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Id</th>
            </tr>
        </thead>
    </table>

    @section Scripts {
        <script src="~/js/product.js"></script>
    }